#include <string.h>

int isAnagram(char *s, char *t) {
    int len_s = 0;
    int len_t = 0;
    char *p = s;
    while (*p != '\0') {
        len_s++;
        p++;
    }
    p = t;
    while (*p != '\0') {
        len_t++;
        p++;
    }
    
    if (len_s != len_t) {
        return 0;
    }
    
    int count[26];
    int i;
    for (i = 0; i < 26; i++) {
        count[i] = 0;
    }
    
    for (i = 0; i < len_s; i++) {
        count[(int)(s[i] - 'a')]++;
        count[(int)(t[i] - 'a')]--;
    }
    
    for (i = 0; i < 26; i++) {
        if (count[i] != 0) {
            return 0;
        }
    }
    
    return 1;
}
